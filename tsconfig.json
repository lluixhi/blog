{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "build",
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "typeRoots": ["node_modules/@types", "src/client/typings"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    }
}